      "user": "maria",
      "comments": 3,
      "likes": 27
    },
    {
      "user": "dmitry",
      "comments": 2,
      "likes": 26
    },
    {
      "user": "ivan",
      "comments": 3,
      "likes": 25
    },
    {
      "user": "nick",
      "comments": 3,
      "likes": 22
    }
  ]
}
